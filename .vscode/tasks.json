{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++ macos: gcc build app",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-Wall",    
                "-Wno-missing-braces ",                
                //"${file}",                            
                "${workspaceFolder}/src/main.c", 
                "${workspaceFolder}/src/assembler.c", 
                "${workspaceFolder}/src/lexer.c",                
                "${workspaceFolder}/src/parser.c", 
                "${workspaceFolder}/src/directives.c", 
                "${workspaceFolder}/src/operate_instructions.c",
                "${workspaceFolder}/src/control_instructions.c",
                "${workspaceFolder}/src/data_movement_instructions.c",
                "${workspaceFolder}/src/lc3util.c",
                "${workspaceFolder}/src/util.c",
                "${workspaceFolder}/src/dict.c",                             
                // "-I/usr/local/include/glib-2.0",
                // "-I/usr/local/lib/glib-2.0/include",    
                // "-lglib-2.0",                                                      
                "-fno-common",
                "-fsanitize=address",
                "-fsanitize=undefined",  
                "-o",                     
                "${workspaceFolder}/out/assembler.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++ macos: gcc build",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-Wall",
                "-Wno-missing-braces ",
                "-DFAB_MAIN",
                "${file}",
                //"${fileDirname}/util.c",   
                // "-lm",   
                // "-lpthread",             
                "-o",
                "${fileDirname}/out/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++ macos: test",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-Wall",    
                "-Wno-missing-braces ",                  
                "${workspaceFolder}/test/directives_test.c",
                "${workspaceFolder}/src/assembler.c", 
                "${workspaceFolder}/src/lexer.c",                
                "${workspaceFolder}/src/parser.c", 
                "${workspaceFolder}/src/directives.c", 
                "${workspaceFolder}/src/operate_instructions.c",
                "${workspaceFolder}/src/control_instructions.c",
                "${workspaceFolder}/src/data_movement_instructions.c",
                "${workspaceFolder}/src/lc3util.c",
                "${workspaceFolder}/src/util.c",
                "${workspaceFolder}/src/dict.c",                             
                // "-I/usr/local/include/glib-2.0",
                // "-I/usr/local/lib/glib-2.0/include",    
                // "-lglib-2.0",           
                "-lcmocka",                              
                "-fno-common",
                "-fsanitize=address",
                "-fsanitize=undefined",
                "-o",
                "${workspaceFolder}/out/test.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task to run tests"
        },
        {
            "type": "cppbuild",
            "label": "C/C++ linux: test",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-Wall",    
                "-Wno-missing-braces ",                  
                "${workspaceFolder}/test/assembler_test.c",
                "${workspaceFolder}/src/assembler.c", 
                "${workspaceFolder}/src/lexer.c",                
                "${workspaceFolder}/src/parser.c", 
                "${workspaceFolder}/src/directives.c", 
                "${workspaceFolder}/src/operate_instructions.c",
                "${workspaceFolder}/src/control_instructions.c",
                "${workspaceFolder}/src/data_movement_instructions.c",
                "${workspaceFolder}/src/lc3util.c",
                "${workspaceFolder}/src/util.c",
                "${workspaceFolder}/src/dict.c",                             
                // "-I/usr/include/glib-2.0",
                // "-I/usr/lib/x86_64-linux-gnu/glib-2.0/include",                              
                // "-lglib-2.0",         
                "-lcmocka",                              
                "-fno-common",
                "-fsanitize=address",
                "-fsanitize=undefined",
                "-o",
                "${workspaceFolder}/out/test.out"                
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task to run tests"
        }
    ],
    "version": "2.0.0"
}